{
  "dashboard": {
    "id": null,
    "title": "WWTP Anomaly Detection - Overview",
    "tags": ["wwtp", "overview"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Health",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "wwtp:app_health_score",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Daily Images Processed",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "wwtp:daily_images_processed",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Anomaly Detection Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "wwtp:ml_anomaly_rate",
            "refId": "A"
          }
        ]
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "30s"
  }
}